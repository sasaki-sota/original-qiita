<div class="col-md-offset-3 col-md-6">
<h1 class="big-log">Qiitaにログイン</h1>
<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.text_field :name, placeholder: 'ユーザー名',
     aria_label: 'ユーザー名', class: 'col-md-12 title' %>



  <div class="field">
    <%= f.password_field :password, placeholder: 'パスワード',
     aria_label: 'パスワード', class: 'col-md-12 title' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions"  style="text-align: center;">
    <%= f.submit "Qiitaにログイン",  class: 'btn btn-primary' %> <br> <br> <br>
    <h4>Qiita のアカウントを持っていない場合は<%= link_to '新規登録',new_user_registration_path %>から。</h4>
  </div>
<% end %>
</div>


