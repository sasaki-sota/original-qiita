<div class="col-md-4">
<!--fallbackを記述するときのサイズ指定の仕方-->
<%= attachment_image_tag(@user, :profile_image, fallback: 'qiita.jpeg', size:'200x200') %><br>
<% if @user != nil %>
<h3><strong><%= @user.last_name %> <%= @user.first_name %></strong></h3>
<% if @user.check_email == true  %>
<span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> <%= @user.email %> <br>
<% end %>
<span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> <%= @user.company %> <br>
<span class="glyphicon glyphicon-cloud-download" aria-hidden="true"></span> <%= @user.from %> <br>
<%= link_to 'プロフィールを編集する', edit_user_path, class: 'glyphicon glyphicon-cog' %>
<% end %>

</div>

<div class="col-md-7">
<table class='table table-hover table-inverse'>
  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td>
        <%= link_to(content) do %> 
        <%# <%= attachment_image_tag(article.user, :profile_image, fallback: 'qiita.jpeg', size:'50x50') %> %>
        <%= content.title %> (<%= content.created_at %>)
        <span style="color: #aaa;">by <%= content.user.name %></span> <br>
        <%= link_to "#{content.comments.count} コメント", content_path(content.id) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @contents, class: "paginate" %>
</div>

