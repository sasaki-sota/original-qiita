<%= render 'left' %>
<div class="col-md-7">
<h5><span class="glyphicon glyphicon-unchecked" aria-hidden="true"></span> マイルストーン<div style='color: #aaa;'>最もいいねの多い記事を10
個表示</div></h5>
<table class='table table-hover table-inverse'>
  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td>
        <span style="font-size: 20px; color: red;"><%= content.favorites.count  %></span> いいね <br>
        <%= link_to(content.user) do %>
         <%= attachment_image_tag(content.user, :profile_image, fallback: 'qiita.jpeg', size:'50x50') %>
         <% end %><%= link_to(content) do %> 
        <%= content.title %> (<%= time_ago_in_words(content.created_at) %>前)
        <% end %>
        <%= link_to(content.user) do %>
        <span style="color: #aaa;">by <%= content.user.name %></span>
        <% end %> <br> <%= link_to(content) do %>
        <%= link_to "#{content.comments.count} コメント", content_path(content.id) %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
 <%= render 'right' %>
